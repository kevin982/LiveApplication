@{
    ViewData["Title"] = "All Books";
}

@model IEnumerable<BookModel>

<div class="container">
    <h3 class="display-4">All books</h3>
    <div class="row">

        @{ 
            foreach (var book in Model)
            {
                <div class="col-md-4">
                   @{ 
                       await Html.RenderPartialAsync("_bookThumbnail", book); 
                   }
                </div>
            }
        }

    </div>
</div>



