@model BookStore.Models.BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(Model.CoverImageUrl == null || Model.CoverImageUrl == string.Empty?"https://cdn.iconscout.com/icon/free/png-256/no-image-1771002-1505134.png":Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(Model.Title == null || Model.Title == string.Empty?"The book is not available":Model.Title)</h3>
        <p class="card-text">@(Model.Description == null || Model.Description == string.Empty?"The description is not available":Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="brn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@(Model.Author == null || Model.Author == string.Empty?"Unknow":Model.Author)</small>
        </div>
    </div>
</div>




