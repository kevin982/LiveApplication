@model IEnumerable<BookModel>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top Books</h3>

        <div class="row">


            @{
                foreach (var book in Model)
                {
                    <div class="col-md-4">
                        @{await Html.RenderPartialAsync("_bookThumbnail", book);}
                    </div>
                }
            }


        </div>


    </div>

</div>
